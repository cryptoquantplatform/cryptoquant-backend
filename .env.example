# Server Configuration
NODE_ENV=production
PORT=5000

# Database (PostgreSQL from Render.com)
DATABASE_URL=postgresql://username:password@hostname:port/database

# JWT Secret (WICHTIG: Ändern Sie das!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Email Configuration (Gmail)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-specific-password

# Frontend URL (Ihre Domain)
FRONTEND_URL=https://ihre-domain.com

# Optional: Twilio (für SMS)
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=+1234567890

# Blockchain API Keys (optional für höhere Rate Limits)
ETHERSCAN_API_KEY=your-etherscan-api-key
BLOCKCYPHER_TOKEN=your-blockcypher-token
